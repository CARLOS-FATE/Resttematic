<header class="bg-[#0b1a33] shadow-lg sticky top-0 z-50">
    <div class="container mx-auto px-4 py-4 flex justify-between items-center">
        <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity duration-300">
            <img src="/logo.png" alt="Logo de Van Gogh Fusions Et Café" class="h-12">
            <span class="text-white text-xl font-bold font-serif hidden sm:block">Van Gogh Fusions</span>
        </a>

        <nav class="hidden md:flex items-center space-x-6">
            <a href="/" class="text-gray-200 hover:text-yellow-300 transition duration-300">Inicio</a>
            <a href="/menu" class="text-gray-200 hover:text-yellow-300 transition duration-300">Menú</a>
            <a href="/#filosofia" class="text-gray-200 hover:text-yellow-300 transition duration-300">Filosofía</a>
            <a href="/#contacto" class="text-gray-200 hover:text-yellow-300 transition duration-300">Contacto</a>
            <a href="/login" class="text-gray-300 text-sm hover:text-yellow-300 transition duration-300">Iniciar Sesión</a>
