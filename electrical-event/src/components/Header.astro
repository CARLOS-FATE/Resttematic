             <a href="/#reservar" class="mt-4 bg-yellow-400 text-blue-900 font-bold py-2 px-12 rounded-full text-md">
                Reservar
            </a>
        </nav>
    </div>
</header>

<script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');

    menuBtn.addEventListener('click', () => {
        // La función .toggle('hidden') añade o quita la clase 'hidden' cada vez que se hace clic
        mobileMenu.classList.toggle('hidden');
    }); 
</script>