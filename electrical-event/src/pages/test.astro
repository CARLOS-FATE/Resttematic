---
// Archivo: src/pages/test.astro
import Layout from '../layouts/Layout.astro';

const testItem = {
  name: "Prueba de Carta",
  slug: "test" // Corresponde a test.pdf
};
---
<Layout 
  title="Página de Prueba de PDF" 
  description="Probando la funcionalidad del visor de PDF."
>
  <div class="container mx-auto px-4 py-8 text-white">
    <h1 class="text-5xl text-center mb-8">Página de Prueba</h1>
    <p class="text-center mb-8">Haz clic en el siguiente enlace para ver el PDF de prueba.</p>
    
    <div class="max-w-md mx-auto">
      <a href={`/cartas/${testItem.slug}`} class="block bg-blue-800 p-6 rounded-lg text-center hover:bg-blue-700">
        <h3 class="text-2xl font-bold">{testItem.name}</h3>
      </a>
    </div>
  </div>
</Layout>