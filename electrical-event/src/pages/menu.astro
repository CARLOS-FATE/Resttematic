---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const apiURL = new URL('/api/menu', Astro.url).toString();
const response = await fetch(apiURL);
const menuCompleto = await response.json();

const categorias = ['Entradas', 'Platos Principales', 'Postres', 'Bebidas', 'Desayuno', 'Almuerzo', 'Cena'];
const menuAgrupado = categorias.map(categoria => ({
    nombre: categoria,
    items: menuCompleto.filter(item => item.categoria === categoria)
})).filter(grupo => grupo.items.length > 0);
---
<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nuestra Carta - Restaurante Van Gogh</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Lato:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Lato', sans-serif;
            background-image: url('/Van_Gogh.jpg');
            background-size: cover;
            background-attachment: fixed; /* Fija la imagen de fondo durante el scroll */
            background-position: center;
        }
        h1, h2, h3, h4, h5, h6 {
            font-family: 'Playfair Display', serif;
        }
    </style>
</head>
<body class="text-gray-200">
    <Header />

    <main class="container mx-auto px-4 py-20">
        <div class="text-center mb-16">
            <h1 class="text-6xl md:text-7xl font-bold text-yellow-300 mb-4 font-serif tracking-wider drop-shadow-lg">Nuestra Carta</h1>
            <p class="text-lg text-gray-200 max-w-2xl mx-auto">Cada plato es una pincelada de sabor, inspirado en la paleta de un genio.</p>
        </div>
        
        {/* Usamos un fondo oscuro semitransparente para que el texto sea legible sobre la imagen de fondo */}
        <div class="bg-[#1a2a45]/90 backdrop-blur-md p-8 md:p-12 rounded-lg shadow-2xl">
            {menuAgrupado.map(grupo => (
                <section class="mb-12 last:mb-0">
                    <h2 class="text-4xl font-semibold text-yellow-300 mb-8 text-center font-serif">{grupo.nombre}</h2>
                    <div class="grid grid-cols-1 lg:grid-cols-2 gap-x-12 gap-y-6">
                        {grupo.items.map(item => (
                            <div class="flex items-center">
                                <div class="flex-grow">
                                    <h3 class="text-xl font-bold text-gray-100">{item.nombre}</h3>
                                    <p class="text-gray-300 text-sm italic">{item.descripcion}</p>
                                </div>
                                <div class="flex-1 border-b-2 border-dotted border-gray-600 mx-4"></div>
                                <div class="text-xl font-semibold text-yellow-300">
                                    S/.{item.precio.toFixed(2)}
                                </div>
                            </div>
                        ))}
                    </div>
                </section>
            ))}
        </div>
    </main>

    <Footer />
</body>
</html>