---
// src/pages/cartas/[slug].astro

import Layout from "../../layouts/Layout.astro";
import { menuItems } from "../../data/menuData.jsx";
import { connectDB } from "../../../api/mongoose.js";
import MenuItem from "../../../api/models/MenuItem.js";

const { slug } = Astro.params;

const menuItem = menuItems.find((item) => item.slug === slug);

if (!menuItem) {
  return Astro.redirect("/404");
}

await connectDB();
const dbItems = await MenuItem.find({ categoria: menuItem.dbCategory });

const pageTitle = menuItem.name;
---

<Layout
  title={`${pageTitle} | Restaurante Van Gogh`}
  description={`Consulta nuestra ${pageTitle} completa. Platos, bebidas y más.`}
>
  <div class="container mx-auto px-4 py-12">
    <h1 class="text-5xl font-bold text-yellow-300 text-center mb-10">
      {pageTitle}
    </h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        dbItems.length > 0 ? (
          dbItems.map((item) => (
            <div class="bg-[#122a51] p-6 rounded-lg shadow-xl border border-blue-900/50 hover:border-yellow-400/50 transition-colors">
              <div class="flex justify-between items-start mb-4">
                <h3 class="text-2xl font-bold text-yellow-300 font-serif">
                  {item.nombre}
                </h3>
                <span class="text-xl font-bold text-white bg-blue-900/50 px-3 py-1 rounded-full">
                  S/. {item.precio.toFixed(2)}
                </span>
              </div>
              <p class="text-gray-300 italic mb-4">
                {item.descripcion || "Sin descripción disponible."}
              </p>
            </div>
          ))
        ) : (
          <div class="col-span-full text-center text-gray-400 text-xl italic p-12 bg-white/5 rounded-lg">
            No hay items disponibles en esta categoría por el momento.
          </div>
        )
      }
    </div>

    <div class="text-center mt-12">
      <a
        href={`/cartas/${slug}.pdf`}
        download
        class="inline-block bg-yellow-400 text-blue-900 font-bold py-3 px-8 rounded-full text-lg hover:bg-yellow-300 transition-transform duration-300 hover:scale-105"
      >
        Descargar Carta Completa (PDF)
      </a>
    </div>
  </div>
</Layout>
