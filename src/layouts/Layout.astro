---
// 1. Definimos las propiedades que el layout recibirá de cada página.
export interface Props {
  title: string;
  description: string;
  keywords?: string; 
}

// 2. Obtenemos los valores de las props, con valores por defecto por si no se envían.
const { 
  title = 'Van Gogh Et Fusion', 
  description = 'Vive una experiencia única en Van Gogh, restaurante en Huamachuco con auténtica comida peruana y un ambiente artístico inspirado en el genio del postimpresionismo.',
	keywords = 'restaurante Van Gogh Huamachuco, comida peruana tradicional, restaurante temático en Perú, experiencia gastronómica artística, mejor restaurante en Huamachuco, cocina peruana gourmet' 
} = Astro.props;

const siteURL = new URL(Astro.url.pathname, "https://www.vangoghfusionsetcafe.com");

---

<!doctype html>
<html lang="es"  class="scroll-smooth">
	<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Restaurant",
  "name": "Restaurante Van Gogh",
  "image": "https://www.vangoghfusionsetcafe.com/URL-de-tu-mejor-foto.jpg",
  "url": "https://www.vangoghfusionsetcafe.com",
  "telephone": "+51-NUMERO-DE-TELEFONO",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Sucre / plazuela Tauricuxi",
    "addressLocality": "Huamachuco",
    "addressRegion": "La Libertad",
    "postalCode": "13201",
    "addressCountry": "PE"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": -7.815187,  // Reemplazar con tu latitud exacta
    "longitude": -78.049860,// Reemplazar con tu longitud exacta
  },
  "servesCuisine": "Peruana",
  "priceRange": "S/. 10", // O $, $$$, etc.
  "openingHoursSpecification": [
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Lunes",
        "Martes",
        "Miercoles",
        "Jueves",
        "Viernes"
      ],
      "opens": "08:00",
      "closes": "22:00"
    },
    {
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": [
        "Sabados",
        "Domingos"
      ],
      "opens": "11:00",
      "closes": "23:00"
    }
  ]
}
</script>
	<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

		 <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />

    <meta name="author" content="Restaurante Van Gogh" /> 
	<meta name="publisher" content="Restaurante Van Gogh" />
	 <meta name="robots" content="index, follow" /> 
	 <link rel="canonical" href={siteURL} />
	  <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteURL} /> <meta property="og:image" content={new URL('/placeholder-social.jpg', siteURL)} /> <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL('/placeholder-social.jpg', siteURL)} /> <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Lato:wght@400;700&display=swap" rel="stylesheet">
	<link rel="icon" type="image/png" href="/android-chrome-512x512.png" />
    <link rel="apple-touch-icon" href="/android-chrome-512x512.png" /> </head>
    <style>
      html,
      body {
        font-family: 'Lato', sans-serif;
            background-image: url('/canvas-texture.png');
